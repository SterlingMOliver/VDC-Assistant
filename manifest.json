{
    "manifest_version": 1,
    "name": "VDC Statistic Blocker",
    "version": "1.1",
    "description": "Toggle certain statistics from view on Voices.com",
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["http://voices.com/*", "https://voices.com/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_title": "Element Hider",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }